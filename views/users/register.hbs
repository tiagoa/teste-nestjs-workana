{{#> main}}
  {{#*inline "content"}}
    <main>
        <h1>Register</h1>
        <form id="registerForm">
            <div>
                <label for="name">Nome completo</label>
                <input type="text" id="name" name="name" placeholder="Nome completo" required>
            </div>
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <div>
                <label for="password">Senha</label>
                <input type="password" id="password" name="password" placeholder="Senha" required>
            </div>
            <div>
                <label for="confirmPassword">senha</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confimacão de senha" required>
            </div>
            <div>
                <label for="zip">CEP</label>
                <input type="text" id="zip" name="zip" placeholder="CEP" required>
            </div>
            <div>
                <label for="street">Rua</label>
                <input type="text" id="street" name="street" placeholder="Rua" required>
            </div>
            <div>
                <label for="neighborhood">Bairro</label>
                <input type="text" id="neighborhood" name="neighborhood" placeholder="Bairro" required>
            </div>
            <div>
                <label for="number">Número</label>
                <input type="text" id="number" name="number" placeholder="Número" required>
            </div>
            <div>
                <label for="city">Cidade</label>
                <input type="text" id="city" name="city" placeholder="Cidade" required>
            </div>
            <div>
                <label for="state">Estado</label>
                <input type="text" id="state" name="state" placeholder="Estado" required>
            </div>
            <button type="submit">Cadastrar</button>
        </form>
    </main>
    <script src="/scripts/register.js"></script>
  {{/inline}}
{{/main}}